@page "/bind"
@rendermode InteractiveServer
<h4>Simple Text Binding Test</h4>

<input @bind="myText" placeholder="Type something..." />

<p>You typed: @myText</p>

<button @onclick="LogText">Log</button>

@code {
protected override bool ShouldRender() => _shouldRender;

private bool _shouldRender = true;
private string myText = "d";

private void LogText()
{
Console.WriteLine($"Current text: {myText}");


}
protected override void OnAfterRender(bool firstRender)
{
Console.WriteLine("AFTER RENDER");
base.OnAfterRender(firstRender);

// Apply animation classes after render with small delay
_ = Task.Run(async () =>
{
await Task.Delay(3000); // Small delay ensures DOM reflow
myText += "d";
await InvokeAsync(StateHasChanged);
});

}
protected override void OnInitialized()
{
    Console.WriteLine("INIT");


// Apply animation classes after render with small delay
_ = Task.Run(async () =>
{
await Task.Delay(10000); // Small delay ensures DOM reflow
_shouldRender = false;
});
base.OnInitialized();
//RenderingService.RegisterComponent(this);
}
}
