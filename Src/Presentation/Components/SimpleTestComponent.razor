@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer
<h4>Simple Text Binding Test</h4>

<input @bind="myText" placeholder="Type something..." />

<p>You typed: @myText</p>

<button @onclick="LogText">Log</button>

@code {
    private string myText = "d";

    private void LogText()
    {
        Console.WriteLine($"Current text: {myText}");
    }
}